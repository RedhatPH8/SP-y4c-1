@model QuestionsViewModel
@{
    ViewData["Title"] = "Questions";
}

<h2>@ViewData["Title"]</h2>
<a asp-controller="Questions" asp-action="Create" class="btn btn-primary">Create</a>
<br />
<br />
<table class="table table-responsive" style="width:100%">
    <tr>
        <th>Question Number</th>
        <th>Question</th>
        <th>Question Type</th>
        <th>Retired?</th>
        <th>Actions</th>
    </tr>

    @foreach (var question in Model.Questions)
    {
        <tr>
            <td>@question.QuestionNumber</td>
            <td>@question.Text</td>
            <td>@question.QuestionType</td>
            <td>@(question.IsRetired ? "Yes" : "No")</td>
            <td>
                <a asp-controller="Questions" asp-action="Edit" asp-route-id="@question.Id" class="btn btn-warning">Edit</a>
                <a asp-controller="Questions" asp-action="Delete" asp-route-id="@question.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>

