            <form asp-controller="DecisionTree" asp-action="Teach" method="post">
                <input type="submit" value="Teach" />
            </form>
            <form asp-controller="DecisionTree" asp-action="Practice" method="post">
                <input type="submit" value="Practice" />
            </form>
            <form asp-controller="DecisionTree" asp-action="NotSure" method="post">
                <input type="submit" value="Am not sure" />
            </form>
    </div>
</div>
